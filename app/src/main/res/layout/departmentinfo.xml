<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".DepartmentActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_dep"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/dep_info"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center|center_vertical"
                    android:layout_marginBottom="3dp"
                    android:text="Department Info"
                    android:textColor="#53370D"
                    android:textSize="24sp"
                    android:textStyle="bold"></TextView>

                <!-- fragment에서 하는법
            <com.google.android.gms.maps.MapView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/map"
                tools:context=".MapsActivity"
                android:name="com.google.android.gms.maps.SupportMapFragment" />
            -->

                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@drawable/customborder"
                    tools:context=".MapsActivity">></fragment>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal"
                    android:weightSum="20">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1.25"
                        android:paddingLeft="7dp"
                        app:srcCompat="@drawable/university" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5.75"
                        android:gravity="center_vertical"
                        android:text="Department"
                        android:textColor="#53370D"
                        android:paddingLeft="8dp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/dep_name"
                        android:layout_width="00dp"
                        android:layout_height="40dp"
                        android:layout_weight="13"
                        android:gravity="center_vertical"
                        android:paddingLeft="9dp"
                        android:text="New Text"
                        android:textColor="#53370D"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:orientation="horizontal"
                    android:weightSum="20">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.25"
                        android:paddingLeft="7dp"
                        app:srcCompat="@drawable/building" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="5.75"
                        android:gravity="center_vertical"
                        android:text="Building"
                        android:textColor="#53370D"
                        android:paddingLeft="8dp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/building_num"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="13"
                        android:gravity="center_vertical"
                        android:paddingLeft="9dp"
                        android:text="New Text"
                        android:textColor="#53370D"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:orientation="horizontal"
                    android:weightSum="20">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.25"
                        android:paddingLeft="7dp"
                        app:srcCompat="@drawable/phone" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="5.75"
                        android:gravity="center_vertical"
                        android:text="Head Tel"
                        android:textColor="#53370D"
                        android:paddingLeft="8dp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/king_phone_number"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="13"
                        android:gravity="center_vertical"
                        android:paddingLeft="9dp"
                        android:text="New Text"
                        android:textColor="#53370D"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:orientation="horizontal"
                    android:weightSum="20">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.25"
                        android:paddingLeft="7dp"
                        app:srcCompat="@drawable/email" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="5.75"
                        android:gravity="center_vertical"
                        android:text="Head E-mail"
                        android:paddingLeft="8dp"
                        android:textColor="#53370D"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/king_email"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="13"
                        android:paddingLeft="9dp"
                        android:gravity="center_vertical"
                        android:text="New Text"
                        android:textColor="#53370D"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:orientation="horizontal"
                    android:weightSum="20">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.25"
                        android:paddingLeft="7dp"
                        app:srcCompat="@drawable/phone" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="5.75"
                        android:gravity="center_vertical"
                        android:text="Staff Tel"
                        android:textColor="#53370D"
                        android:paddingLeft="8dp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/admin_phone_number"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="13"
                        android:gravity="center_vertical"
                        android:paddingLeft="9dp"
                        android:text="New Text"
                        android:textColor="#53370D"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:orientation="horizontal"
                    android:weightSum="20">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.25"
                        android:paddingLeft="7dp"
                        app:srcCompat="@drawable/email" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="5.75"
                        android:gravity="center_vertical"
                        android:text="Staff E-mail"
                        android:paddingLeft="8dp"
                        android:textColor="#53370D"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/admin_email"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="13"
                        android:paddingLeft="9dp"
                        android:gravity="center_vertical"
                        android:text="New Text"
                        android:textColor="#53370D"></TextView>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/button_go_web"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="14dp"
        android:layout_marginRight="12dp"
        android:background="@android:color/transparent" />

</FrameLayout>